<form class="form-horizontal col-sm-4 col-sm-offset-4" action="<%= signup_url %>" method="post">
  <div class="col-sm-offset-3">
    <h2>Sign up!</h2>
  </div>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group row">
    <label class="control-label col-sm-4" for="user_username">Username:</label>
    <div class="col-sm-8">
      <input class="form-control" type="text" id="user_username" name="user[username]" value="<%= @user.username %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="control-label col-sm-4" for="user_password">Password:</label>
    <div class="col-sm-8">
      <input class="form-control" type="password" id="user_password" name="user[password]">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-4 col-sm-4">
      <input class="form-control btn btn-success" type="submit" value="Sign Up">
    </div>
  </div>
</form>
