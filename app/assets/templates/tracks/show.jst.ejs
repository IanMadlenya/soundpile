<div class="inline-player">

</div>

<div class="track-footer">
  <div class="track-buttons">
    <li><button class="like"><span class="glyphicon glyphicon-heart"></span></button></li>
    <li><button class="share"><span class="glyphicon glyphicon-retweet"></span></button></li>
  </div>

  <div class="track-counts">
    <li>
      <span class="glyphicon glyphicon-play"></span>
      <span class="num_plays"><%= track.escape("num_plays") %></span>
    </li>

    <li>
      <span class="glyphicon glyphicon-heart"></span>
      <span class="num_likes"><%= track.escape("num_likes") %></span>
    </li>

    <li>
      <span class="glyphicon glyphicon-retweet"></span>
      <span class="num_shares"><%= track.escape("num_shares") %></span>
    </li>
  </div>
</div>
